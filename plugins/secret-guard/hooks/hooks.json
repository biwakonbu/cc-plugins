{
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "Read|Write|Edit|Glob|Grep",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/guard-file-access.sh"
                    }
                ]
            },
            {
                "matcher": "Bash",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/guard-bash-command.sh"
                    }
                ]
            }
        ]
    }
}
